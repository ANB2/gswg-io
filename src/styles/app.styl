
gruntOrange = #E48632
darkGruntOrange = darken(gruntOrange, 15)
lightGruntOrange = rgb(255, 207, 121)

html, body, #popup
  padding 0
  margin 0
  width 100%
  height 100%
  background gruntOrange
  color #FFF
  font-family 'Pathway Gothic One', sans-serif
  cursor wait
body.loaded
  cursor default
[ng-click]
  cursor pointer

.ui.segment
  color #333

.ui.inverted.grunt-orange.segment
  background-color darkGruntOrange !important

a
  color inherit
  text-decoration none

div,svg
  transition all 0.3s linear

a.fork
  opacity 0.5


.sidebar
  text-align center
  float left
  width 100%
  height 100%
  overflow hidden
  .logo
    height 250px
  .cover img
    padding-top 10px
    height 309px
    width 250px
  .title
    padding-bottom 10px
    .big
      font-size 40pt
    .small
      font-size 30pt

  .author .link
    color lightGruntOrange
    text-decoration underline

.loaded .sidebar
  width 1%
  min-width 150px
  .logo
    height 150px
  .title
    .big
      font-size 20pt
    .small
      font-size 15pt
  .link a
    font-size 20pt

@media (max-width : 480px)
  body.loaded
    .fork
      display none
    .sidebar
      min-width 0px
      width 1px
    .main
      margin-left 0px

.main
  margin-left 1500px
  overflow-x hidden
  overflow-y auto
  height 100%
  padding 0

.loaded .main
  margin-left 150px
  font-family Helvetica
  .container
    position relative
    height 100%
    padding 20px
    box-sizing: border-box;
    .hyperlinks
      // height 200px
      // overflow-y auto
      .pattern
        display none
      .hyperlink .text
        overflow hidden
        width 250px
        text-overflow ellipsis
      .limit.button
        position absolute
        top 20px
        right 20px

    img.cover
      width: 100px
      float: left
      margin: 10px
      box-shadow: 0px 0px 4px 0px #333

    .store.item
      text-align center
      min-height 0px
      width 120px
      margin-bottom 5px

    .faq,
    .extras
      .message
        padding-left 40px
        font-style italic
      p.link
        padding-left 20px
      a
        color darkGruntOrange

    .footer
      color #fff
      text-align right
      padding-bottom 10px

.loading
  font-size 30pt

#popup
  text-align center
  padding-top 60px
  position fixed
  z-index 1
  background rgba(20, 20, 20, 0.9)
  top 0
  left 0
  transition opacity 1s ease-out
  opacity 0
  display none

  &.active
    display block
    opacity 1

  #link-title
    font-size 60pt
  #link-url
    font-size 40pt
    




